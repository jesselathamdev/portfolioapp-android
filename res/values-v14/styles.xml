<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <item name="android:actionDropDownStyle">@style/ActionBarNavigationDropDown</item>        
    </style>

    <!-- action bar navigation -->
    <style name="ActionBarNavigation" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="ActionBarNavigationDropDown" parent="android:style/Widget.Spinner">
        <item name="android:textColor">#ffffff</item>
    </style>
    
</resources>