<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.conceptmob.portfolioapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" /> 
    
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"        
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.conceptmob.portfolioapp.base.BaseApplication">
        <activity
            android:name=".activites.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.SignInActivity"
            android:theme="@android:style/Theme.NoTitleBar"            
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:noHistory="true">           
        </activity>
        <activity
            android:name=".activites.SimpleActivity"
            android:screenOrientation="portrait"
            android:label="Testing">           
        </activity>
        <activity
            android:name=".activites.PortfoliosActivity"
            android:screenOrientation="portrait"
            android:label="Portfolios">
        </activity>
        <activity
            android:name=".activites.PortfolioHoldingsActivity"
            android:screenOrientation="portrait"
            android:label="Portfolio Holdings"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".activites.TransactionActivityActivity"
            android:screenOrientation="portrait"
            android:label="Activity">
        </activity>
    </application>

</manifest>